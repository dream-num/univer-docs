---
import 'modern-normalize'

interface Props {
  lang: string
  title: string
}

const { lang, title } = Astro.props
---

<!doctype html>
<html lang={lang}>
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-RCVZZ25ZP4"></script>
    <script type="module">
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-RCVZZ25ZP4');
    </script>

    <meta charset="UTF-8" />
    <meta name="description" content="新一代开源办公套件,univer,sheet,doc,slide" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
:root {
  font-family: Inter, -apple-system, BlinkMacSystemFont, "PingFang SC", "Hiragino Sans GB", "noto sans", "Microsoft YaHei", "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 16px;
  -webkit-font-smoothing: antialiased;
}

img {
  user-select: none;
}
</style>
