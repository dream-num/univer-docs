---
interface Feature {
  title: string
  description: string
}

interface Props {
  features: Feature[]
}

const { features } = Astro.props
---

<ul class="feature-box">
  {features.map(feature => (
    <li>
      <strong>{feature.title}</strong>
      <p>{feature.description}</p>
    </li>
  ))}
</ul>

<style lang="less">
.feature-box {
  margin: 0;
  padding: 0;
  list-style: none;
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 1rem;
  @media (min-width: 50rem) {
    grid-template-columns: repeat(3, 1fr);
  }

  strong {
    margin-bottom: 1rem 0.4rem;
    display: block;
  }

  p {
    margin: 0;
    font-size: 0.875rem;
  }
}
</style>
