      }
    }

    .content {
      h2 {
        margin: 0 0 40px;
        color: #0F172A;
        font-size: 36px;
        font-weight: 500;
        line-height: 44px;
      }

      h3 {
        margin: 0 0 16px;
        color: #0F172A;
        font-size: 28px;
        font-weight: 500;
        line-height: 36px;
      }

      p {
        margin: 24px 0;
        color: #0F172A;
        font-size: 18px;
        font-weight: 300;
        line-height: 32px;

        img {
          width: 100%;
          border-radius: 20px;
          border: 10px solid #F0F3FF;
          display: block;
        }

