---
import * as Post from './_blog.md'
import Footer from '@/components/Workspace/Footer.astro'
import Header from '@/components/Workspace/Header.astro'
import BlankLayout from '@/layouts/BlankLayout.astro'

const { frontmatter, Content } = Post

const headings = Post.getHeadings()
---

<BlankLayout lang="en-us" title="Univer Workspace | Univer">
  <link rel="stylesheet" href="//fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" />

  <section class="page">
    <Header />

    <header class="header">
      <h1>{frontmatter.title}</h1>
      <p>{frontmatter.description}</p>

      <section class="video">
        <iframe
          src={frontmatter.video}
          title="Rick Astley - Never Gonna Give You Up (Official Music Video)"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          allowfullscreen
        />
      </section>
    </header>

    <section class="post">
      <aside class="toc">
        <section class="container">
          <label>Contents</label>
          {headings.length > 0 && (
            <ul>
              {headings.map(({ depth, slug, text }) => depth < 3 && (
                <li>
                  <a href={`#${slug}`}>{text}</a>
                </li>
              ))}
            </ul>
          )}
        </section>
      </aside>

      <article class="content">
        <Content />
      </article>
    </section>

    <Footer />
  </section>
</BlankLayout>

<script>
const $headings = document.querySelectorAll('.toc .container ul a')

const ids = Array.from($headings).map($a => $a.href.split('#')[1])

const $titles = ids.map(id => document.getElementById(id))

window.addEventListener('scroll', () => {
  const scrollPosition = window.scrollY;

  $titles.forEach((heading, index) => {
    const headingPosition = heading.offsetTop;

    if (scrollPosition >= headingPosition) {
      $headings.forEach((link) => link.classList.remove('active'));
      $headings[index].classList.add('active');
    }
  });
});
</script>

<style lang="less">
.page {
  font-family: Poppins;

  .header {
    max-width: 1200px;
    margin: 0 auto 72px auto;
    padding: 72px 32px 0;

    h1 {
      margin: 0 0 32px;
      color: #0F172A;
      text-align: center;
      font-size: 56px;
      font-style: italic;
      font-weight: 600;
      line-height: 56px;
      letter-spacing: 0.56px;
    }

    p {
      width: 758px;
      margin: 0 auto 72px auto;
      color: #0F172A;
      text-align: center;
      font-family: Poppins;
      font-size: 20px;
      font-style: normal;
      font-weight: 400;
      line-height: 36px;
    }

    .video {
      height: 568px;
      padding: 16px;
      background: #F0F3FF;
      border-radius: 16px;

      iframe {
        width: 100%;
        height: 100%;
        border-radius: 16px;
      }
    }
  }

  .post {
    max-width: 1200px;
    margin: 0 auto 72px auto;
    padding: 0 32px;
    display: grid;
    grid-template-columns: 192px 1fr 192px;

    .toc {
      .container {
        position: sticky;
        top: 140px;

        label {
          margin-bottom: 16px;
          color: #6B7589;
          font-size: 12px;
          font-weight: 500;
          display: block;
        }

        :global(ul) {
          margin: 0;
          padding: 0;
          list-style: none;
          display: grid;
          gap: 16px;

          li {
            a {
              color: #6B7589;
              font-size: 14px;
              font-weight: 400;
              text-decoration: none;
              cursor: pointer;
              transition: color 0.2s;
              &:hover {
                color: #0019FE;
              }
              &.active {
                color: #0019FE;
                font-weight: 500;
              }
            }
          }
        }
      }
    }

    .content {
      :global(h2) {
        margin: 0 0 40px;
        color: #0F172A;
        font-size: 36px;
        font-weight: 500;
        line-height: 44px;
      }

      :global(h3) {
        margin: 0 0 16px;
        color: #0F172A;
        font-size: 28px;
        font-weight: 500;
        line-height: 36px;
      }

      :global(p) {
        margin: 24px 0;
        color: #0F172A;
        font-size: 18px;
        font-weight: 300;
        line-height: 32px;

        :global(img) {
          width: 100%;
          border-radius: 20px;
          border: 10px solid #F0F3FF;
          display: block;
        }

        :global(a) {
          color: #0038FF;

          font-family: Poppins;
          font-size: 18px;
          font-weight: 300;
          line-height: 32px;
          text-decoration-line: underline;
        }
      }
    }
  }
}
</style>
