---
import { getLangFromUrl, languages, useI18nUrl, useTranslations } from '@web/shared/i18n/utils'
import { Github } from './Github/index'
import { Locale } from './Locale/index'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
const l = useI18nUrl(lang)

const currentPath = Astro.url.pathname.replace(`/${lang}`, '')
---

<header class="header">
  <div class="wrapper">
    <section class="left">
      <h1 class="title">
        <a href={l('/')}>
          <img src="/logo.svg" alt="logo" />
          <span class="hidden">Univer</span>
        </a>
      </h1>

      <nav class="nav">
        <a href={l('/guides/introduction')}>{t('header.docs')}</a>
        <a href={l('/api')}>{t('header.api')}</a>
        <a href={l('/blog')}>{t('header.blog')}</a>
        <a href="/icons">{t('header.icons')}</a>
        <a href="/examples">{t('header.examples')}</a>
      </nav>
    </section>

    <section class="right">
      <Locale client:load lang={languages[lang]} currentPath={currentPath} />

      <a class="github" href="https://github.com/dream-num/univer">
        <Github client:load />
      </a>
      {lang === 'zh-cn'
        ? (<a class="playground" href="/pro-examples">{t('header.pro')}</a>)
        : (<a class="playground" href="/workspace">{t('header.workspace')}</a>)}

    </section>
  </div>
</header>

<style lang="less" scoped>
.header {
  position: relative;
  z-index: 1;

  .wrapper {
    margin: auto;
    height: 5.8rem;
    max-width: 1200px;
    padding: 0 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    @media (max-width: 1024px) {
      max-width: 100%;
    }

    .left {
      display: flex;
      align-items: center;
      gap: 2.25rem;

      .title {
        position: relative;
        margin: 0;

        > img {
          height: 2rem;
        }

        .hidden {
          position: absolute;
          height: 1px;
          width: 1px;
          padding: 0;
          border: 0;
          clip: rect(1px, 1px, 1px, 1px);
          clip-path: inset(0 0 99.9% 99.9%);
          overflow: hidden;
        }
      }

      .nav {
        display: flex;
        align-items: center;
        gap: 3rem;
        @media (max-width: 1024px) {
          display: none;
        }

        a {
          color: #1F2327;
          font-size: 1rem;
          text-decoration: none;
          &:hover {
            color: #274FEE;
          }
        }
      }
    }

    .right {
      display: flex;
      align-items: center;
      gap: 1.1rem;

      .github {
        text-decoration: none;
      }

      .playground {
        height: 2.6rem;
        line-height: 2.6rem;
        padding: 0 2rem;
        color: #fff;
        text-decoration: none;
        font-weight: 500;
        background: #274FEE;
        border-radius: 8px;
        box-shadow: 0px 4px 12px 0px #0B00D040;
        transition: all .15s;
        @media (max-width: 1024px) {
          display: none;
        }
        &:hover {
          background: #3A60F7;
        }
      }
    }
  }
}
</style>
