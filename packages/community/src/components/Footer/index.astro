---
import { getLangFromUrl, useI18nUrl, useTranslations } from '@web/shared/i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
const l = useI18nUrl(lang)

const present = new Date().getFullYear()
---

<footer class="footer">
  <section class="banner">
    <div class="wrapper">
      <p>
        <span class="title">{t('footer.tagline.t1')}</span>
        <span class="subtitle">{t('footer.tagline.t2')}</span>
      </p>
      <a href="https://github.com/dream-num/univer">
        {t('footer.button')}
      </a>
    </div>
  </section>

  <nav class="nav">
    <div class="column">
      <label>{t('footer.nav.company.title')}</label>
      <a href={l('/blog')}>{t('footer.nav.company.blog')}</a>
      <a href={l('/enterprises#获取商业版')}>{t('footer.nav.company.concat')}</a>
    </div>
    <div class="column">
      <label>{t('footer.nav.resource.title')}</label>
      <a href={l('/guides/introduction')}>{t('footer.nav.resource.docs')}</a>
      <a href="/api">{t('footer.nav.resource.api')}</a>
      <a href="/icons">{t('footer.nav.resource.icons')}</a>
    </div>
    <div class="column">
      <label>{t('footer.nav.community.title')}</label>
      <a href="https://discord.gg/z3NKNT6D2f">{t('footer.nav.community.discord')}</a>
      <a href="https://www.zhihu.com/org/meng-shu-ke-ji">{t('footer.nav.community.zhihu')}</a>
    </div>
    <div class="column">
      <label>{t('footer.nav.help.title')}</label>
      <a href="https://github.com/dream-num/univer/discussions">{t('footer.nav.help.github')}</a>
      <a href={l('/guides/troubleshooting')}>{t('footer.nav.help.troubleshooting')}</a>
      <a href="https://github.com/dream-num/univer/issues">{t('footer.nav.help.bug')}</a>
    </div>
  </nav>

  <p class="copyright">
    <span>Copyright © 2021-{present} Mengshu. All Rights Reserved.</span>
    <span>{t('footer.copyright')}</span>
    <!-- <span>服务协议 | 隐私政策</span> -->
  </p>
</footer>

<style lang="less" scoped>
.footer {
  margin-top: 3rem;
  padding-bottom: 2rem;
  background: rgba(228, 244, 254, 0.55);
  @media (max-width: 1024px) {
    padding: 0 1.25rem;
  }

  .banner {
    transform: translateY(-50%);

    .wrapper {
      position: relative;
      height: 6rem;
      max-width: 1000px;
      margin: 0 auto;
      padding: 0 1.75rem 0 6.5rem;
      background: #fff;
      border-radius: 12px;
      box-shadow: 0px 0px 24px 0px rgba(31, 35, 39, 0.04);
      display: flex;
      align-items: center;
      justify-content: space-between;
      @media (max-width: 1024px) {
        height: 3.5rem;
        padding: 0 1rem 0 4.2rem;
      }

      &::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 1.2rem;
        width: 4rem;
        height: 4rem;
        background: url('/favicon.svg') no-repeat;
        background-size: contain;
        transform: translateY(-50%);
        @media (max-width: 1024px) {
          width: 2.375rem;
          height: 2.375rem;
        }
      }

      > p {
        margin: 0;
        display: grid;
        gap: 0.4rem;
        @media (max-width: 1024px) {
        }

        .title {
          color: #1E222B;
          font-weight: 600;
          font-size: 1.5rem;
          @media (max-width: 1024px) {
            font-size: 1rem;
          }
        }

        .subtitle {
          color: #888;
          font-size: 0.875rem;
          @media (max-width: 1024px) {
            display: none;
          }
        }
      }

      > a {
        height: 2.6rem;
        padding: 0 2rem;
        color: #fff;
        line-height: 2.6rem;
        font-weight: 500;
        text-decoration: none;
        background: #274FEE;
        border-radius: 8px;
        box-shadow: 0px 4px 12px 0px rgba(11, 0, 208, 0.25);
        flex-shrink: 0;
        transition: all .15s;
        @media (max-width: 1024px) {
          display: none;
        }
        &:hover {
          background: #3A60F7;
        }
      }
    }
  }

  .nav {
    margin-bottom: 2.1rem;
    display: flex;
    justify-content: center;
    gap: 4.7rem;
    @media (max-width: 1024px) {
      flex-direction: column;
      gap: 1rem;
    }

    .column {
      display: flex;
      flex-direction: column;
      gap: 1rem;

      label {
        color: #1F2327;
        font-size: 0.9rem;
        font-weight: 600;
      }

      a {
        color: #999;
        font-size: 0.9rem;
        text-decoration: none;

        &:hover {
          text-decoration: underline;
        }
      }
    }
  }

  .copyright {
    margin: 0;
    color: #999;
    text-align: center;
    font-size: 0.7rem;
    @media (max-width: 1024px) {
      padding: 2rem 0 ;
      display: grid;
      gap: 0.5rem;
    }
  }
}
</style>
